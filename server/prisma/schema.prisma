// This is your Prisma schema file
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User Model - Core identity
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String?  // Null if OAuth-only user
  displayName  String
  avatarUrl    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // OAuth connections
  oauthProvider String? // 'github', 'google', etc.
  oauthId       String? // Provider's user ID

  // User preferences
  defaultRole String @default("VOTER") // VOTER or OBSERVER - user's preferred role when joining rooms

  // Relations
  sessions      Session[]
  refreshTokens RefreshToken[]
  roomsOwned    Room[]        @relation("RoomOwner")
  roomsDealt    Room[]        @relation("RoomDealer")
  participants  Participant[]
  votes         Vote[]

  @@unique([oauthProvider, oauthId])
  @@index([email])
}

// Session Model - Multi-device support
model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  userAgent String?
  ipAddress String?
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

// Refresh Token Model - For token refresh
model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

// Room Model - Poker Room
model Room {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  deckType    String   @default("FIBONACCI") // FIBONACCI or TSHIRT
  moderatorId String
  dealerId    String?
  isActive    Boolean  @default(true)
  isPublic    Boolean  @default(false) // Public rooms visible to all users
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Current topic (stored as JSON string for SQLite)
  activeTopic String?

  // Relations
  moderator    User          @relation("RoomOwner", fields: [moderatorId], references: [id])
  dealer       User?         @relation("RoomDealer", fields: [dealerId], references: [id])
  participants Participant[]
  votes        Vote[]
  rounds       Round[]

  @@index([slug])
  @@index([moderatorId])
  @@index([dealerId])
  @@index([isPublic])
}

// Participant Model - User in a room
model Participant {
  id       String   @id @default(cuid())
  userId   String
  roomId   String
  role     String   @default("VOTER") // MODERATOR, VOTER, OBSERVER
  joinedAt DateTime @default(now())

  // Socket tracking for multi-device (JSON string)
  socketIds String @default("[]")

  // BRB (Be Right Back) status
  isBrb Boolean @default(false)
  brbAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@unique([userId, roomId])
  @@index([roomId])
}

// Vote Model - Individual vote
model Vote {
  id        String   @id @default(cuid())
  roomId    String
  userId    String
  roundId   String
  value     String   // Stored as string to support both numeric and t-shirt
  createdAt DateTime @default(now())

  room  Room  @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  round Round @relation(fields: [roundId], references: [id], onDelete: Cascade)

  @@unique([roundId, userId])
  @@index([roomId])
  @@index([roundId])
}

// Round Model - A voting round within a room
model Round {
  id         String    @id @default(cuid())
  roomId     String
  topic      String?   // JSON string for topic info
  phase      String    @default("VOTING") // WAITING, VOTING, REVEALED
  revealedAt DateTime?
  createdAt  DateTime  @default(now())

  room  Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)
  votes Vote[]

  @@index([roomId])
}
