# Local Development Environment (SQLite)
# Copy this to .env for local development without PostgreSQL

NODE_ENV=development
PORT=3001

# SQLite Database (local development)
# Note: For local dev, you need to change schema.prisma to use sqlite
# Change: provider = "postgresql" to provider = "sqlite"
# Change: url = env("DATABASE_URL") to url = "file:./dev.db"
DATABASE_URL="file:./dev.db"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# OAuth - GitHub (optional for local dev)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# OAuth - Google (optional for local dev)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Jira Integration (optional)
JIRA_DOMAIN=
JIRA_EMAIL=
JIRA_API_TOKEN=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
